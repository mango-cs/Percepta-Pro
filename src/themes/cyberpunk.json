{
    "name": "Cyberpunk",
    "description": "Futuristic neon theme with cyan, purple, and hot pink for the digital age",
    "type": "dark",
    "author": "Percepta Team",
    "version": "1.0.0",
    "colors": {
        "primary": "#00FFFF",
        "secondary": "#FF00FF",
        "accent": "#00FF41",
        "warning": "#FFD700",
        "error": "#FF073A",
        "bg_main": "#0A0A0A",
        "bg_card": "#1A1A2E",
        "bg_interactive": "#16213E",
        "bg_hover": "#0F3460",
        "text_primary": "#FFFFFF",
        "text_secondary": "#E94560",
        "text_muted": "#9CA3AF",
        "text_inverse": "#0A0A0A",
        "border_color": "#00FFFF",
        "border_hover": "#FF00FF",
        "border_focus": "#00FF41"
